{
    "extends": "@tsconfig/strictest/tsconfig.json",
    "compilerOptions": {
        "target": "es2022",
        "lib": [ "dom", "es2022", "ESNext.Disposable" ],
        "module": "preserve",

        "rootDir": "src",
        "outDir": "dist",
        "sourceMap": true,

        "preserveConstEnums": false,
        "declaration": true,
        "isolatedModules": false,
    },
    "include": [ "src" ],
}
